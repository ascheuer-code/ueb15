    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Launch Current File",
            "request": "launch",
            "mainClass": "${file}",
            "vmArgs": [
                "-ea",
                "-Xmx1024m",
                "-Xms256m",
                "-Xss24m",
                "-XX:MaxPermSize=256m",
                "-XX:-UseLoopPredicate",
            ],
            "console": "externalTerminal",
            "args": "one one"
        }
    ],
    "java.project.sourcePaths": [
        "src"
    ]
}